{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LLM benchmark run",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "date_utc",
    "commit_sha",
    "scenario_id",
    "run_id",
    "agent",
    "model",
    "reasoning_effort",
    "metrics"
  ],
  "properties": {
    "date_utc": { "type": "string" },
    "commit_sha": { "type": "string" },
    "scenario_id": { "type": "string" },
    "run_id": { "type": "string" },
    "agent": { "type": "string" },
    "model": { "type": "string" },
    "reasoning_effort": { "type": "string" },
    "duration_sec": { "type": "integer", "minimum": 0 },
    "notes": { "type": "string" },
    "real_tokens": {
      "type": "object",
      "additionalProperties": false,
      "required": ["prompt_tokens", "completion_tokens", "total_tokens"],
      "properties": {
        "prompt_tokens": { "type": "integer", "minimum": 0 },
        "completion_tokens": { "type": "integer", "minimum": 0 },
        "total_tokens": { "type": "integer", "minimum": 0 }
      }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "docs",
        "unique_docs_opened",
        "chars_read",
        "tok_est",
        "max_doc_chars",
        "fallback_count",
        "clarifying_questions",
        "violations"
      ],
      "properties": {
        "docs": { "type": "array", "items": { "type": "string" } },
        "unique_docs_opened": { "type": "integer", "minimum": 0 },
        "chars_read": { "type": "integer", "minimum": 0 },
        "tok_est": { "type": "integer", "minimum": 0 },
        "max_doc_chars": { "type": "integer", "minimum": 0 },
        "fallback_count": { "type": "integer", "minimum": 0 },
        "clarifying_questions": { "type": "integer", "minimum": 0 },
        "violations": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}

